<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/main.css" />
    </stylesheets>
   <bottom>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu fx:id="menuFile" text="_File">
                        <items>
                            <MenuItem styleClass="menuItem" text="_New...">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                </accelerator>
                            </MenuItem>
                            <MenuItem id="menuOpen" fx:id="open" onAction="#doOpen" text="_Open">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                </accelerator>
                            </MenuItem>
                            <MenuItem fx:id="save" onAction="#doSave" styleClass="menuItem" text="_Save"/>
                            <MenuItem fx:id="print" styleClass="menuItem" text="Print" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem onAction="#signOut" styleClass="menuItem" text="_Exit"/>
                        </items>
                    </Menu>
                    <Menu text="_Edit">
                        <items>
                            <MenuItem text="_Add" />
                            <MenuItem onAction="#hideMaterial" text="_Change"/>
                            <MenuItem onAction="#deleteMaterial" text="_Delete"/>
                        </items>
                    </Menu>
                    <Menu text="_Help">
                        <items>
                            <MenuItem onAction="#about" text="_About"/>
                        </items>
                    </Menu>
                </menus>
                <effect>
                    <SepiaTone level="0.24" />
                </effect>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <items>
                    <Button id="tbOpen" fx:id="tbOpen" mnemonicParsing="false" onAction="#openMaterial" prefHeight="25.0" prefWidth="23.0" styleClass="tbButton" />
                    <Button id="tbAdd" fx:id="tbAdd" mnemonicParsing="false" onAction="#saveMaterials" pickOnBounds="true" styleClass="tbButton" />
                    <Button id="tbHide" fx:id="tbHide" mnemonicParsing="false" onAction="#hideMaterial" prefHeight="25.0" prefWidth="0.0" styleClass="tbButton" />
                    <Button id="tbUnhide" fx:id="tbUnhide" mnemonicParsing="false" onAction="#unhideMaterial" prefHeight="25.0" prefWidth="0.0" styleClass="tbButton" />
                    <Button id="tbDelete" fx:id="tbDelete" mnemonicParsing="false" onAction="#deleteMaterial"
                            prefHeight="25.0" prefWidth="23.0" styleClass="tbButton"/>
                    <Button fx:id="tbClear" mnemonicParsing="false" onAction="#clearNotification" pickOnBounds="true" styleClass="tbButton" text="Clear notification" />
                    <Button id="tbExplore" fx:id="tbExplore" mnemonicParsing="false" onAction="#browser" pickOnBounds="true" styleClass="tbButton" />
                    <Button id="tbBack" fx:id="tbBack" mnemonicParsing="false" onAction="#back" pickOnBounds="true" styleClass="tbButton" />
                    <Button id="tbHome" fx:id="tbSignOut" mnemonicParsing="false" onAction="#signOut" pickOnBounds="true" styleClass="tbButton" />
                </items>
                <effect>
                    <SepiaTone level="0.17" />
                </effect>
            </ToolBar>
            <HBox prefHeight="254.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                <children>
                    <TableView fx:id="tableOfLectures" prefHeight="260.0" prefWidth="200.0">
                        <columns>
                            <TableColumn fx:id="columnName" prefWidth="200.0" text="Lecture" />

                        </columns>
                        <effect>
                            <DropShadow />
                        </effect>
                    </TableView>
                    <TableView fx:id="tableOfLabs" prefHeight="260.0" prefWidth="200.0">
                        <columns>
                            <TableColumn fx:id="columnNameLab" prefWidth="200.0" text="Labs" />

                        </columns>
                        <effect>
                            <DropShadow />
                        </effect>
                    </TableView>
                    <TableView fx:id="tableOfGroups" prefHeight="260.0" prefWidth="200.0">
                        <columns>
                            <TableColumn fx:id="columnNameGroup" prefWidth="200.0" text="Groups" />

                        </columns>
                        <effect>
                            <DropShadow />
                        </effect>
                    </TableView>
                </children>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
            <Label fx:id="statusMsg" prefHeight="80.0" prefWidth="599.0" snapToPixel="false" styleClass="statusBar"
                   text=""/>
        </VBox>
   </bottom>
</BorderPane>
